  title = "國立臺灣大學新南向開放課程"
  description = "國立臺灣大學教學發展中心回應政府的新南向政策，在台灣駐泰國代表處協助下，針對新南向國家的發展需求，集結臺大開放式課程、臺大 MOOC 與臺大演講網的精選內容，分為資訊科技、商管經濟、認識亞太、人文史地等四大類優良課程，以數位化公開的方式跨越國界與時間的限制，讓知識與新南向國家公民與全球社群共享。"

  def get_badge_type(source)

    badge_type = "" 
    case source 
      when "ocw" 
        badge_type = "success" 
      when "mooc"
        badge_type = "warning" 
      when "speech" 
        badge_type = "info" 
    end
    badge_type
  end

  def source_title(source)

    title = "" 
    case source 
      when "ocw" 
        title = "開放式課程" 
      when "mooc"
        title = "MOOC x Coursera" 
      when "speech" 
        title = "台大演講網" 
    end
    title
  end

  def display_instructors(instructors)
    result = ""    

    instructors.each_with_index do |instructor, index|
      result << instructor["department"] + " " + instructor["name"]
      if index < instructors.length - 1
        result << "、"
      end
    end
    
    result
  end
%>

