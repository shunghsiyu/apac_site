  title = "國立臺灣大學高教線上資源 - 分享泰國入囗網站"
  description = "國立臺灣大學長年致力於公共教育，將校內好課、好演講數位化並公開。本網站集結了來自臺大開放式課程、臺大 MOOC 與臺大演講網的精選內容，分為資訊科技、商管經濟、認識亞洲、人文史地等四大類，讓知識跨越國界與時間的限制，與全人類共享。"

  def get_badge_type(source)

    badge_type = "" 
    case source 
      when "ocw" 
        badge_type = "success" 
      when "mooc"
        badge_type = "warning" 
      when "speech" 
        badge_type = "info" 
    end
    badge_type
  end

  def source_title(source)

    title = "" 
    case source 
      when "ocw" 
        title = "開放式課程" 
      when "mooc"
        title = "MOOC x Coursera" 
      when "speech" 
        title = "台大演講網" 
    end
    title
  end

  def display_instructors(instructors)
    result = ""    

    instructors.each_with_index do |instructor, index|
      result << instructor["department"] + " " + instructor["name"]
      if index < instructors.length - 1
        result << "、"
      end
    end
    
    result
  end
%>

